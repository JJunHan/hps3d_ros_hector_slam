<?xml version="1.0"?>

<launch>


    <!-- run pointcloud_to_laserscan node -->
    <node pkg="pointcloud_to_laserscan" type="pointcloud_to_laserscan_node" name="pointcloud_to_laserscan">

        <remap from="cloud_in" to="/testpic"/>
        <remap from="scan" to="/testout"/>
        <rosparam>
            target_frame: hps # Leave disabled to output scan in pointcloud frame
            transform_tolerance: 0.01
            min_height: -3.0
            max_height: 3.0

            angle_min: 0.9075 # 76 degrees to rad
            angle_max: 2.2339 # M_PI/2
            angle_increment: 0.0087 # M_PI/360.0
            scan_time: 0.3333
            range_min: 0.45
            range_max: 7.0
            use_inf: true
            inf_epsilon: 1.0

            # Concurrency level, affects number of pointclouds queued for processing and number of threads used
            # 0 : Detect number of cores
            # 1 : Single threaded
            # 2->inf : Parallelism level
            concurrency_level: 1
        </rosparam>

    </node>

    <!-- Run HPS client-->
    <node pkg="hps_camera" name = "cam" type = "ros_camera_client" />

    <!-- Run rviz channel -->
    <node pkg="rviz" type="rviz" name="rviz"
    args="-d $(find hps_camera)/src/rvizsetup.rviz"/>

</launch>
